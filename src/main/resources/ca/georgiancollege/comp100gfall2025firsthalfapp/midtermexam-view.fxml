<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.georgiancollege.comp100gfall2025firsthalfapp.MidTermExamController">
    <top>
        <HBox  alignment="CENTER_LEFT">
            <Label text="Photo Word Match" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="scoreLabel" text="Score: 0"/>
            <Label fx:id="roundLabel" text="Round: 0" style="-fx-padding: 0 0 0 10;"/>
        </HBox>
    </top>

    <center>
        <VBox  alignment="CENTER">
            <ImageView fx:id="imageView" fitWidth="700" fitHeight="400" preserveRatio="true" />
            <Label fx:id="feedbackLabel" text="Press Next to start."/>
        </VBox>
    </center>

    <bottom>
        <VBox >
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <rowConstraints>
                <RowConstraints percentHeight="50"/>
                <RowConstraints percentHeight="50"/>
                </rowConstraints>

                <Button fx:id="choiceA" text="Choice A" onAction="#handleChoice" GridPane.columnIndex="0" GridPane.rowIndex="0" prefHeight="50"/>
                <Button fx:id="choiceB" text="Choice B" onAction="#handleChoice" GridPane.columnIndex="1" GridPane.rowIndex="0" prefHeight="50"/>
                <Button fx:id="choiceC" text="Choice C" onAction="#handleChoice" GridPane.columnIndex="0" GridPane.rowIndex="1" prefHeight="50"/>
                <Button fx:id="choiceD" text="Choice D" onAction="#handleChoice" GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="50"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="nextButton" text="Next Round" onAction="#handleNextRound"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
